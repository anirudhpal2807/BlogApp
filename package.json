{
  "name": "mern-blog-app",
  "version": "1.0.0",
  "description": "Full-stack MERN Blog Application",
  "scripts": {
    "setup-env": "node setup-env.js",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run server:prod\" \"npm run client:prod\"",
    "server:prod": "cd backend && npm start",
    "client:prod": "cd frontend && npm start",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "mern",
    "blog",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

